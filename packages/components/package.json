{
  "name": "@daesite/components",
  "version": "0.1.0",
  "description": "daesite Design system",
  "license": "AGPL-3.0",
  "author": "Dmitriy Chukhno <me@dmitr1sdae.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./style": {
      "import": "./dist/style.css"
    },
    "./assets/*": {
      "import": "./dist/assets/*"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && vite build && sed -i \"1s/^/\\\"use client\\\";\\n/\" dist/index.js",
    "dev": "vite build --watch",
    "pretty": "prettier --check $(find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name '.vitest' -o -name 'coverage' \\) -prune -o -print)",
    "pretty:fix": "prettier --write $(find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name '.vitest' -o -name 'coverage' \\) -prune -o -print)",
    "storybook": "storybook dev --no-open -p 6006"
  },
  "dependencies": {
    "@daesite/shared": "workspace:packages/shared",
    "@daesite/styles": "workspace:packages/styles",
    "@daesite/utils": "workspace:packages/utils",
    "next": "14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ttag": "^1.8.6"
  },
  "devDependencies": {
    "@daesite/react-polymorphic-types": "workspace:packages/react-polymorphic-types",
    "@redae/vite-plugin-lib-assets": "^1.0.0",
    "@storybook/addon-docs": "^8.1.11",
    "@storybook/addon-essentials": "^8.1.11",
    "@storybook/addon-links": "^8.1.11",
    "@storybook/blocks": "^8.1.11",
    "@storybook/manager-api": "^8.1.11",
    "@storybook/react": "^8.1.11",
    "@storybook/react-vite": "^8.1.11",
    "@storybook/theming": "^8.1.11",
    "@testing-library/dom": "^10.2.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/loader-utils": "^2.0.6",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/text-encoding-utf-8": "^1.0.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.0",
    "loader-utils": "^3.3.1",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "storybook": "^8.1.3",
    "text-encoding-utf-8": "^1.0.2",
    "typescript": "^5.4.3",
    "vite": "^5.3.2",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^1.6.0"
  }
}
